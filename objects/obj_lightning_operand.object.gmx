            <string>
switch(state)
{
    case LOState.Waiting4AtomMove:
        if atom.state == AtomState.Wait
        {                  
            state = LOState.StartLightning;     
        }
        break;
    case LOState.StartLightning:
        state = LOState.Waiting4Strike;
        scr_play_snd(Sound.Spark0);
        alarm[0] = room_speed / 2; //Initiate Lightning Strike .5 sec
        
        //change the sprite to the lightning ball
        lightning_atom.sprite_index = sprite_index;
        
        //make sure index is within range
        lightning_atom.image_index = 0;
        
        //change lightning remnat type
        lightning_atom.starting_type = atom.starting_type;
        
        //make sure the atom is on top
        atom_depth = atom.depth;
        atom.depth = lightning_atom.depth - 1;
        break;
    
    case LOState.Waiting4Strike:   
        event_user(0); //play music     
        
        //wait for shock
        if obj_controller.state == ControllerState.Shocking 
        then state = LOState.Struck;
        break;   
        
    case LOState.Struck: 
        atom.depth = lightning_atom.depth - 1;
        
        //wait for it shock to be over        
        if obj_controller.state != ControllerState.Shocking 
        then state = LOState.Done;
        break;
        
    case LOState.Done: 
        //Restore depth and Destroy operand
        atom.depth = atom_depth;
        atom.state = AtomState.DestroyWithPayoff;
       
        //Destroy this object
        instance_destroy();
        break;       
}
</string>
