if swipe_ms_dwn &amp;&amp; device_mouse_check_button_released(0, mb_any) 
{
  
    swipe_ms_dwn = false;
    var x1 = device_mouse_x(0);
    var y1 = device_mouse_y(0);
    if point_distance(swipe_x0, swipe_y0, x1, y1) &gt; 15
    {
